<!DOCTYPE html>
<html>
  <head>
    <title>Demoty</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0">
  </head>

  <body style="background-color: gray">

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

        <%= link_to('MilionSposobówNaMilion', root_path, class: "navbar-brand")%>
        
        
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav navbar-left">

    <li><%= link_to('Poczekalnia', posts_poczekalnia_path)%></li>
    <li><%= link_to('Top 10', posts_top_path)%></li>
    <li><%= link_to('Losowy', posts_losowy_path)%></li>
        
      </ul>
 
      <ul class="nav navbar-nav navbar-right">
      
      <%if user_signed_in? %>
          
          <li><%= link_to("Wiadomości (#{unread_messages_count}) ", mailbox_inbox_path) %></li>
          <li><%= link_to('Dodaj', new_post_path)%></li> 
          <li><%= link_to "Witaj #{current_user.name}",current_user %></li>
          <li><%= link_to(avatar_for(current_user, size: 50), current_user) %></li>
          <li><%= link_to('Wyloguj', destroy_user_session_path, :method => :delete) %></li>
                
        
      <% else %>
           
           <li> <%= link_to('Zaloguj', new_user_session_path)  %>  </li>
          
      <% end %>
            
          
      </ul>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
  
  
  <% flash.each do |name, msg| %>
  <%= content_tag(:div,msg) %>
  <% end %>
    <%= yield %>
  </body>
</html>
