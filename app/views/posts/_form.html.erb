<div class="panel panel-default col-md-offset-3 col-md-6  ">

<div class="panel-body">


<%= form_for post, html: { multipart: true } do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <%= f.label :obrazek %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :tytuł %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :opis %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :zrodlo, '*Źródło' %>
    <%= f.text_area :content, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :tag ,'*Tagi (oddziel przecinkami)' %>
    <%= f.text_field :tag_list,value: @post.tag_list.join(","), class: 'form-control', required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Zatwierdź", class: 'btn btn-primary' %>
  </div>
   

<% end %>
</div>