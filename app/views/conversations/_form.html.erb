<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label :odbiorcy %>
      <%= f.select(:recipients, User.all.collect {|p| [ p.name, p.id ] }, {}, { multiple: true , class: "chosen-select form-control" })%>
    </div>
    <div class="form-group">
      <%= f.label :temat %>
      <%= f.text_field :subject, placeholder: "Temat", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :wiadomość %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Tu wpisz treść wiadomości...", rows: 4  %>
    </div>

    <%= f.submit "Wyślij", class: "btn btn-success" %>
<% end %>