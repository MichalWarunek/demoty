
<div class="panel panel-default col-md-offset-3 col-md-6  ">
<div class="panel-heading"><h2>Rejestracja</h2></div>
<div class="panel-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="form-group">
    <%= f.label :imię %><br />
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :hasło %>
    <% if @minimum_password_length %>
    <em>(Minimum <%= @minimum_password_length %> znaków)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :potwierdzenie_hasła %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>



  <div class="actions">
    <%= f.submit "Zatwierdź", class: 'btn btn-primary' %>
  </div>
<% end %>

</div>

<div class="panel-footer"><%= render "devise/shared/links" %></div>